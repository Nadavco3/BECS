<%- include("partials/header") %>

  <h2 class="headline middle">Provide blood units</h2>
  <div class="provide-form box">
    <form class="" action="/provide" method="post">
      <label for="blood_type" class="form-label">Blood Type</label>
      <select class="form-control form-control-sm" id="blood_type" name="blood_type">
        <option value="A+">A+</option>
        <option value="A-">A-</option>
        <option value="B+">B+</option>
        <option value="B-">B-</option>
        <option value="AB+">AB+</option>
        <option value="AB-">AB-</option>
        <option value="O+">O+</option>
        <option value="O-">O-</option>
      </select>
      <label for="quantity" class="form-label">Quantity</label>
      <input type="text" class="form-control form-control-sm" id="quantity" name="quantity" value="">
      <button type="submit" class="btn btn-primary submit" name="button">Submit</button>
    </form>
  </div>

  <div class="back">
      <a class="btn btn-primary" href="/user-home" role="button">Back</a>
  </div>

</body>
</html>
