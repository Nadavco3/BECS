<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blood Reception</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Blood Bank Of Israel</h1>
    <div class="box-data">
        <h3>Remaining blood units</h3>
        <%blood.forEach(function(type){ %>
          <label><%= type.type %>: <b><%= type.quantity %> </b></label>
        <%});%>

    </div>

    <div class="row">
    <form action="/addBlood" method="post">
        <div class="box-form">
            <h3>Received blood units</h3>
            <% blood.forEach(function(type){ %>
              <div class="item">
                  <label >Blood type <%= type.type %></label>  <input  name=<%= type.name %>   type="number"   min="0" value="0" autocomplete="off"><br>
              </div>
            <% }); %>

            <button type="submit">Recieve Blood</button>
        </div>
    </form>
    <form action="/giveBlood" method="post">
        <div class="box-form">
            <h3>Provide blood units</h3>
            <% blood.forEach(function(type){ %>
            <div class="item">
                <label >Blood type <%= type.type %></label>  <input  name=<%= type.name %>   type="number" min="0" max=<%= type.quantity %> value="0" autocomplete="off"><br>
            </div>
            <% }); %>

            <button type="submit">Provide Blood</button>
        </div>
    </form>
</div>
<form action="/Emergency" class="Emergency" method="post">
    <button type="submit">Emergency</button>
</form>
</body>
</html>
